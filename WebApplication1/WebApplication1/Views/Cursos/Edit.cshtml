<body class="body_registro">

    <section class="color_label_registro">

        <div class="container">
            <br />
            <br />
            <h3 class="titulos">Editar Curso</h3>
            <hr>

        </div>


        <div class="container">
            <fieldset>
				<form asp-controller="Curso" asp-action="Search" method="post">
					<div class="form-group">
						<div class="row">
							<div class="col-md-4">
								<label class="control-label" asp-for="Carreras"></label>
								<select asp-for="Carreras" class="form-control">

									@foreach (var item in Model.Carreras)
										{
										   <option value="@item.IdCarrera">@item.NombreCarrera</option>
										}
								</select>
								<span asp-validation-for="Carreras"></span>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col-md-offset-2 col-md-4">
								<label asp-for="IdCurso" class="control-label"></label>
								<input asp-for="IdCurso" class="form-control">
							</div>

							<div class="col-md-3">
								<button type="submit" class="btn btn-dark btn-lg btn_registrar">
									Buscar
									<span class="fa fa-search" aria-hidden="true"></span>
								</button>

							</div>
						</div>
					</div>



				</form>

                <form method="post">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-4">
                                <label asp-for="Descripcion" class="control-label" for="nome"></label>
                                <input asp-for="Descripcion" class="form-control" placeholder="Jon" type="text">
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                          <div class="col-md-offset-2 col-md-4">
                                    <label asp-for="Creditos" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Creditos" class="form-control" type="number" required="true">
                                    </div>
                                </div>
                            </div>
						 <div class="col-md-offset-2 col-md-4">
                                    <label asp-for="Precio" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Precio" class="form-control" type="number" required="true">
                                    </div>
                                </div>
                            </div>
                    

                </form>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-4">
                            <button type="submit" class="btn btn-dark btn-lg btn_registrar">
                                Guardar
                                <span class="fa fa-save" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>

       </section>
</body>
